{% extends 'base.html.twig' %}

{% block title %}Panier - Boutique{% endblock %}

{% block body %}
<div class="container">
    {% include 'partials/_hero.html.twig' with {
        'hero_title': 'Mon Panier',
        'hero_subtitle': 'R√©capitulatif de vos achats'
    } %}

    {% if cart.cartItems|length > 0 %}
        <div class="cart-items">
            {% for item in cart.cartItems %}
                <div class="cart-item" data-item-id="{{ item.id }}">
                    <div class="d-flex align-items-center mb-3">
                        <div class="image-placeholder" style="width: 80px; height: 80px; margin-right: 1rem;">
                            üì∑
                        </div>
                        <div class="flex-column" style="flex: 1;">
                            <h5>{{ item.product.name }}</h5>
                            <p>Type: {{ item.product.type|capitalize }}</p>
                            <p class="product-price">{{ item.product.price|number_format(2, ',', ' ') }} ‚Ç¨</p>
                        </div>
                        <div class="quantity-controls">
                            <button class="btn btn-quantity" onclick="updateQuantity({{ item.id }}, {{ item.quantity - 1 }})">-</button>
                            <span class="quantity">{{ item.quantity }}</span>
                            <button class="btn btn-quantity" onclick="updateQuantity({{ item.id }}, {{ item.quantity + 1 }})">+</button>
                        </div>
                        <div class="item-total">
                            {{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} ‚Ç¨
                        </div>
                        <button class="btn btn-remove" onclick="removeItem({{ item.id }})">√ó</button>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="cart-summary">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Total: <span class="product-price">{{ cart.totalPrice|number_format(2, ',', ' ') }} ‚Ç¨</span></h3>
            </div>
            <div class="cart-actions">
                <button class="btn btn-red" onclick="proceedToCheckout()">Proc√©der au paiement</button>
                <button class="btn" onclick="clearCart()">Vider le panier</button>
                <a href="{{ path('app_home') }}" class="btn">Continuer les achats</a>
            </div>
        </div>        {% else %}
            {% include 'partials/_empty_state.html.twig' with {
                'empty_title': 'Votre panier est vide',
                'empty_message': 'Ajoutez des produits pour commencer vos achats',
                'empty_link_url': path('app_home'),
                'empty_link_text': 'Voir les produits'
            } %}
        {% endif %}
</div>

<!-- Toast notification -->
{% include 'partials/_toast.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updateQuantity(itemId, newQuantity) {
            fetch(`/cart/update/${itemId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `quantity=${newQuantity}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    showToast(data.message);
                }
            });
        }

        function removeItem(itemId) {
            fetch(`/cart/remove/${itemId}`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    showToast(data.message);
                }
            });
        }

        function clearCart() {
            if (confirm('√ätes-vous s√ªr de vouloir vider le panier ?')) {
                fetch('/cart/clear', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    }
                });
            }
        }

        function proceedToCheckout() {
            alert('Fonctionnalit√© de paiement √† impl√©menter');
        }

        {% include 'partials/_toast_script.html.twig' %}
    </script>
{% endblock %}
