{% extends 'base.html.twig' %}

{% block title %}Accueil - Boutique{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header Section -->
    <div class="hero-section bg-primary text-white py-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-4 fw-bold mb-3">Bienvenue dans notre boutique</h1>
                    <p class="lead">Découvrez notre collection de vêtements et baskets tendance</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-center">
                    <div class="btn-group" role="group" aria-label="Filtrage par type">
                        <a href="{{ path('app_home') }}" 
                           class="btn {{ current_type is null ? 'btn-primary' : 'btn-outline-primary' }}">
                            Tous les produits
                        </a>
                        <a href="{{ path('app_home', {type: 'vêtements'}) }}" 
                           class="btn {{ current_type == 'vêtements' ? 'btn-primary' : 'btn-outline-primary' }}">
                            Vêtements
                        </a>
                        <a href="{{ path('app_home', {type: 'baskets'}) }}" 
                           class="btn {{ current_type == 'baskets' ? 'btn-primary' : 'btn-outline-primary' }}">
                            Baskets
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        {% if products %}
            <div class="row g-4">
                {% for product in products %}
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 product-card shadow-sm">
                            <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                                <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">{{ product.name }}</h5>
                                <p class="card-text text-muted mb-2">
                                    <small>Type: {{ product.type|capitalize }}</small>
                                </p>
                                <p class="card-text mb-3">
                                    <span class="badge bg-secondary">Stock: {{ product.quantity }}</span>
                                </p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="h5 mb-0 text-primary fw-bold">{{ product.price|number_format(2, ',', ' ') }} €</span>
                                    </div>
                                    {% if product.quantity > 0 %}
                                        <button class="btn btn-primary w-100 btn-add-to-cart" 
                                                data-product-id="{{ product.id }}">
                                            <i class="fas fa-shopping-cart me-2"></i>
                                            Ajouter au panier
                                        </button>
                                    {% else %}
                                        <button class="btn btn-secondary w-100" disabled>
                                            <i class="fas fa-times me-2"></i>
                                            Rupture de stock
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="row">
                <div class="col-12 text-center py-5">
                    <i class="fas fa-search text-muted mb-3" style="font-size: 4rem;"></i>
                    <h3 class="text-muted">Aucun produit trouvé</h3>
                    <p class="text-muted">Essayez de modifier vos filtres ou revenez plus tard.</p>
                    <a href="{{ path('app_home') }}" class="btn btn-primary">
                        Voir tous les produits
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<!-- Toast notification pour ajout panier -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="cartToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i class="fas fa-shopping-cart text-success me-2"></i>
            <strong class="me-auto">Panier</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Produit ajouté au panier avec succès !
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .product-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            border-radius: 15px;
            overflow: hidden;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
        }
        
        .product-image-placeholder {
            height: 200px;
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
            border-bottom: 1px solid #dee2e6;
        }
        
        .btn-add-to-cart {
            transition: all 0.3s ease;
        }
        
        .btn-add-to-cart:hover {
            transform: scale(1.05);
        }
        
        .btn-group .btn {
            border-radius: 25px;
            margin: 0 5px;
            padding: 10px 20px;
            font-weight: 500;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .badge {
            font-size: 0.8rem;
            padding: 0.5rem 0.75rem;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Simulation ajout au panier
        document.addEventListener('DOMContentLoaded', function() {
            const addToCartButtons = document.querySelectorAll('.btn-add-to-cart');
            const toast = new bootstrap.Toast(document.getElementById('cartToast'));
            
            addToCartButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const productId = this.getAttribute('data-product-id');
                    
                    // Animation du bouton
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Ajout...';
                    this.disabled = true;
                    
                    // Simulation d'une requête AJAX
                    setTimeout(() => {
                        this.innerHTML = '<i class="fas fa-check me-2"></i>Ajouté !';
                        this.classList.remove('btn-primary');
                        this.classList.add('btn-success');
                        
                        // Afficher le toast
                        toast.show();
                        
                        // Remettre le bouton à son état initial après 2 secondes
                        setTimeout(() => {
                            this.innerHTML = '<i class="fas fa-shopping-cart me-2"></i>Ajouter au panier';
                            this.classList.remove('btn-success');
                            this.classList.add('btn-primary');
                            this.disabled = false;
                        }, 2000);
                    }, 1000);
                });
            });
        });
    </script>
{% endblock %}
